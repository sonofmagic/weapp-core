{
  "name": "weapp-core",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.2.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/weapp-core.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "turbo run build --filter=@weapp-core/escape",
    "dev": "turbo run dev --parallel",
    "test": "vitest run --coverage.enabled",
    "test:dev": "vitest --coverage.enabled",
    "lint": "turbo run lint",
    "release": "changeset",
    "publish-packages": "turbo run build lint --filter=@weapp-core/escape && npm run test && changeset version && changeset publish",
    "sync": "cnpm sync @weapp-core/escape @weapp-core/regex @weapp-core/http @weapp-core/runtime-injector weapp-websocket weapp-xmlhttprequest",
    "script:init": "monorepo init",
    "script:sync": "monorepo sync",
    "script:clean": "monorepo clean",
    "script:mirror": "monorepo mirror"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/prompt-cli": "^19.7.1",
    "@commitlint/types": "^19.5.0",
    "@icebreakers/eslint-config": "^1.0.1",
    "@icebreakers/monorepo": "^0.7.5",
    "@icebreakers/stylelint-config": "^1.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/get-value": "^3.0.5",
    "@types/git-url-parse": "^9.0.3",
    "@types/klaw": "^3.0.6",
    "@types/lint-staged": "^13.3.0",
    "@types/lodash": "^4.17.15",
    "@types/lodash-es": "^4.17.12",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.13.5",
    "@types/set-value": "^4.0.3",
    "@vitest/coverage-v8": "~3.0.5",
    "@weapp-core/escape": "workspace:^",
    "@weapp-core/regex": "workspace:^",
    "ci-info": "^4.1.0",
    "cross-env": "^7.0.3",
    "defu": "^6.1.4",
    "es-toolkit": "^1.32.0",
    "eslint": "^9.21.0",
    "execa": "^9.5.2",
    "fs-extra": "^11.3.0",
    "get-value": "^4.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.4.3",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "micromatch": "^4.0.8",
    "miniprogram-api-typings": "^4.0.5",
    "only-allow": "^1.2.1",
    "pathe": "^2.0.3",
    "pkg-types": "^1.3.1",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "set-value": "^4.1.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.0",
    "tsup": "^8.3.6",
    "tsx": "^4.19.3",
    "turbo": "^2.4.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vitest": "~3.0.5",
    "yaml": "^2.7.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
