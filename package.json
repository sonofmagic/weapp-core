{
  "name": "weapp-core",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.20.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/weapp-core.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "turbo run build --filter=@weapp-core/escape",
    "dev": "turbo run dev --parallel",
    "test": "vitest run --coverage.enabled",
    "test:dev": "vitest --coverage.enabled",
    "lint": "turbo run lint",
    "release": "changeset",
    "publish-packages": "turbo run build lint --filter=@weapp-core/escape && npm run test && changeset version && changeset publish",
    "sync": "cnpm sync @weapp-core/escape @weapp-core/regex @weapp-core/http @weapp-core/runtime-injector weapp-websocket weapp-xmlhttprequest",
    "script:init": "monorepo init",
    "script:sync": "monorepo sync",
    "script:clean": "monorepo clean",
    "script:mirror": "monorepo mirror",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@icebreakers/commitlint-config": "^1.2.2",
    "@icebreakers/eslint-config": "^1.5.8",
    "@icebreakers/monorepo": "^2.1.3",
    "@icebreakers/stylelint-config": "^1.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/klaw": "^3.0.7",
    "@types/lodash": "^4.17.20",
    "@types/lodash-es": "^4.17.12",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^24.9.2",
    "@types/semver": "^7.7.1",
    "@types/set-value": "^4.0.3",
    "@vitest/coverage-v8": "~4.0.6",
    "@weapp-core/escape": "workspace:^",
    "@weapp-core/regex": "workspace:^",
    "ci-info": "^4.3.1",
    "cross-env": "^10.1.0",
    "defu": "^6.1.4",
    "es-toolkit": "^1.41.0",
    "eslint": "^9.39.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "get-value": "^4.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "micromatch": "^4.0.8",
    "miniprogram-api-typings": "^4.1.0",
    "only-allow": "^1.2.1",
    "pathe": "^2.0.3",
    "pkg-types": "^2.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "set-value": "^4.1.0",
    "stylelint": "^16.25.0",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.11",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "turbo": "^2.6.0",
    "type-fest": "^5.1.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "~4.0.6",
    "yaml": "^2.8.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
